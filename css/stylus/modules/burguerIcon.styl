.burguerIcon
  display flex
  align-items center
  position relative
  margin 0
  padding 0
  width 2.5rem
  height 2.5rem
  appearance none
  box-shadow none
  border-radius none
  border none
  cursor pointer
  background-color transparent
  
  +above($desktop)
    display none
    
  &:focus
    outline 0
    
.burguerIcon-inner
  width 100%
  display block
  height 4px
  background-color transparent
  position relative
  transition background-color 300ms
    
  &::before,
  &::after
    position absolute
    display block
    left 0
    width 100%
    height 4px
    background-color white
    content ''
    transition-duration 300ms
  
  &:before
    top -.5rem
    transition-property top, transform
  
  &:after
    bottom -.5rem
    transition-property bottom, transform

.burguerIcon.is-active
  
  .burguerIcon-inner
    
    &::after,
    &::before
      transition-delay 0
      background-color white
    
    &::before
      top 0
      transform rotate(45deg)
      
    &::after
      bottom 0
      transform rotate(-45deg)