.header
  wrapped()
  display flex
  align-items center
  position fixed
  top 0
  left 0
  width 100%
  z-index 100
  height 114px
  
  +below($desktop)
    wrapped(90%)
    
  &.is-scrolled
    height 80px
    background-color rgba($brand-darkBlue, .8)
      
    .logo svg
      width 91px
      height 48px

.logo
  display flex
  
  +above($desktop)
    position absolute
    top 1rem
    left 50%
    transform translateX(-50%)
  
.logo svg
  width 91px
  height 82px