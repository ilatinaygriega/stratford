.mobileNav
  wrapped(90%)
  padding-top 9.5rem
  display flex
  flex-direction column
  align-items center
  position fixed
  top 0
  bottom 0
  left 0
  width 100%
  transform translateX(-100%)
  background-color rgba($brand-orange, .98)
  transition 300ms all ease-in-out
  
  &.is-active
    transform translateX(0)
    
.mobileNav-item
  color white
  text-decoration none
  font-size 22px
  margin-bottom 3.5rem